<Window x:Class="YellowCarrot.AddRecipWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YellowCarrot"
        mc:Ignorable="d"
        Title="AddRecipWindow" Height="600" Width="800">
    <Grid>
        <!-- Grid definitions -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <!-- Tools -->

        <Label
            x:Name="lblNewRecipe"
            Grid.Column="3"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            Content="New recipe"
            FontSize="30"
            FontWeight="Bold"
            />
        <Label
            x:Name="lblRecipeName"
            Grid.Column="1"
            Grid.Row="2"
            Content="Recipe Name:"
            FontSize="20"
            HorizontalAlignment="Center"
            />
        <Label
            x:Name="lblIngredient"
            Grid.Column="1"
            Grid.Row="3"
            Content="Ingredient:"
            FontSize="20"
            HorizontalAlignment="Center"
            />
        <Label
            x:Name="lblIngredientQuantity"
            Grid.Column="1"
            Grid.Row="4"
            Content="Quantity:"
            FontSize="20"
            HorizontalAlignment="Center"
            />

        <Label
            x:Name="lblTag"
            Grid.Column="4"
            Grid.Row="2"
            Content="Tag"
            FontSize="20"
            HorizontalAlignment="Center"
            />
        <Label
            x:Name="lblList"
            Grid.Column="1"
            Grid.Row="5"
            Content="Ingredients:"
            FontSize="20"
            HorizontalAlignment="Center"
            />

        <TextBox
            x:Name="txtRecipeName"
            Grid.Column="2"
            Grid.Row="2"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Left"
            Width="200"
            />
        <TextBox
            x:Name="txtIngredient"
            Grid.Column="2"
            Grid.Row="3"
            Width="150"
            />
        <TextBox
            x:Name="txtIngredientQuantity"
            Grid.Column="2"
            Grid.Row="3" Margin="0,68,10,0" Grid.RowSpan="2"
            />
        <ComboBox
            x:Name="cboTag"
            Grid.Column="5"
            Grid.Row="2"
            Width="150"
            />
        <ComboBox
            x:Name="cboUnit"
            Grid.Column="3"
            Grid.Row="4"
            />

        <ListView
            x:Name="lvIngredientList"
            Grid.Column="2"
            Grid.Row="5"
            Grid.ColumnSpan="3"
            Grid.RowSpan="3" SelectionChanged="lvIngredientList_SelectionChanged"
            />
        <Button
            x:Name="btnCancel"
            Grid.Column="5"
            Grid.Row="8"
            Content="Cancel"
            FontSize="20" 
            Click="btnCancel_Click"
            />
        <Button
            x:Name="btnSaveRecipe"
            Grid.Column="2"
            Grid.Row="8"
            Content="Save Recipe"
            FontSize="20" Click="btnSaveRecipe_Click"
            />
        <Button
            x:Name="btnAddIngredient"
            Grid.Column="5"
            Grid.Row="4"
            Content="Add Ingredient"
            FontSize="20" Click="btnAddIngredient_Click"
            />
        <Button
            x:Name="btnDeleteIngredient"
            Content="Delete Ingredient"
            Grid.Column="5"
            Grid.Row="6"
            FontSize="15" Click="btnDeleteIngredient_Click"
            />
    </Grid>
</Window>
